<View>
  <!-- Show the document page image -->
  <Image name="document" value="$image" zoom="true" rotate="true" maxWidth="100%"/>

  <!-- Each Textract word comes as a Rectangle region (_token).
       Annotators DO NOT draw boxes; these are preloaded -->
  <RectangleLabels name="word_boxes" toName="document">
    <Label value="_token" background="#AAAAAA"/>
  </RectangleLabels>

  <!-- Show the OCR text per word (readonly, not editable) -->
  <TextArea name="ocr" toName="document" editable="false" maxSubmissions="1" perRegion="true" 
            showSubmitButton="false" />

  <!-- Annotators assign a label (bank, issuer, etc.) per word region -->
  <Choices name="field" toName="document" choice="single" perRegion="true" required="false">
    <Choice value="bank" />
    <Choice value="issuer" />
    <Choice value="cusip" />
    <Choice value="isin" />
    <Choice value="maturity" />
    <Choice value="coupon" />
    <Choice value="currency" />
    <Choice value="amount_issued" />
    <Choice value="issue_price" />
    <Choice value="denomination" />
  </Choices>

  <!-- Annotators can correct / enter the normalized value for that word -->
  <TextArea name="value" toName="document" perRegion="true" editable="true" 
            maxSubmissions="1" showSubmitButton="false" />

  <!-- Show instructions / layout guide -->
  <Header value="Select a word region (preloaded from Textract).
                 - 'ocr' shows the original word.
                 - Use 'field' to label its type (bank, issuer, etc.).
                 - Use 'value' to confirm or correct the extracted value."/>
</View>
